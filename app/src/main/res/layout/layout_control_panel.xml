<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_speed_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_speed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Working speed"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <include layout="@layout/layout_item_number_picker" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:id="@+id/ll_auto_tasks_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/ll_speed_container"
        app:layout_constraintTop_toTopOf="@id/ll_speed_container">

        <TextView
            android:id="@+id/tv_auto_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto add tasks"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_auto_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>