<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_worker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Workers"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_worker_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="(0)"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_worker_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recruit_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="+ Recruit"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/tv_worker_title"
        app:layout_constraintEnd_toStartOf="@id/iv_worker_options"
        app:layout_constraintTop_toTopOf="@id/tv_worker_title" />

    <ImageView
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:id="@+id/iv_worker_options"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete_dark"
        app:layout_constraintBottom_toBottomOf="@id/tv_worker_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_worker_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_worker_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_worker_title"
        tools:listitem="@layout/layout_item_worker" />

</androidx.constraintlayout.widget.ConstraintLayout>